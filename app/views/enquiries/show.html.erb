<%- model_class = Enquiry -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @enquiry.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enquiry_number) %>:</strong></dt>
  <dd><%= @enquiry.enquiry_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @enquiry.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_status) %>:</strong></dt>
  <dd><%= @enquiry.payment_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_paid) %>:</strong></dt>
  <dd><%= @enquiry.amount_paid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact) %>:</strong></dt>
  <dd><%= @enquiry.contact %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @enquiry.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @enquiry.message %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              enquiries_path, :class => 'btn btn-default'  %>
<%if current_user.role == 'SuperAdmin'%>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_enquiry_path(@enquiry), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              enquiry_path(@enquiry),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%end%>
